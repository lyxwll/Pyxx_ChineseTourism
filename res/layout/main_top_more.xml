<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.pyxx.chinesetourism.view.HeaderView
        android:id="@+id/more_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.pyxx.chinesetourism.view.DampView
        android:id="@+id/more_dampview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/head_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/test_img" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="bottom"
                    android:paddingBottom="10dp" >

                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >

                        <com.pyxx.chinesetourism.view.CircleImageView
                            android:id="@+id/user_img"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/more_img" />

                        <TextView
                            android:id="@+id/more_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/user_img"
                            android:text="@string/action_settings"
                            android:textColor="@color/white"
                            android:textSize="22sp" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/login_or_no"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignBottom="@+id/relativeLayout1"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_selector"
                        android:text="@string/more_login"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mycollect_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/more_item_select"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:gravity="center_vertical"
                    android:text="@string/more_mycollect"
                    android:textColor="@color/more_word_bkg"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/common_grey" />

            <RelativeLayout
                android:id="@+id/aboutus_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/more_item_select"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageView2"
                    android:gravity="center_vertical"
                    android:text="@string/more_aboutus"
                    android:textColor="@color/more_word_bkg"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/common_grey" />

            <RelativeLayout
                android:id="@+id/feedback_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/more_item_select"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/imageView4"
                    android:layout_marginLeft="14dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:gravity="center_vertical"
                    android:text="@string/more_feedback"
                    android:textColor="@color/more_word_bkg"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/common_grey" />

            <RelativeLayout
                android:id="@+id/pushmsg_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/more_item_select"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_push_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageView5"
                    android:gravity="center_vertical"
                    android:text="@string/more_pushmsg"
                    android:textColor="@color/more_word_bkg"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/common_grey" />

            <RelativeLayout
                android:id="@+id/clearcache_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/more_item_select"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageView7"
                    android:gravity="center_vertical"
                    android:text="@string/more_clearcache"
                    android:textColor="@color/more_word_bkg"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:contentDescription="@string/action_settings"
                    android:src="@drawable/more_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/customer_btn"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_pressed"
                    android:text="@string/more_customer"
                    android:textColor="@color/more_word_bkg"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/unLogin_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_selector"
                android:text="@string/more_nologin"
                android:textColor="@color/white"
                android:visibility="invisible" />
        </LinearLayout>
    </com.pyxx.chinesetourism.view.DampView>

</LinearLayout>